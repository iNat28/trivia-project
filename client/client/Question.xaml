<local:CustomWindow x:Class="client.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"            
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"                
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="#FF410A66"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"            
        Title="Game" Height="450" Width="800">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="WhiteSmoke" Margin="10,20,9.6,20" CornerRadius="5" Height="388">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="25" Height="367">
                    <TextBlock x:Name="QuestionText" Style="{DynamicResource MaterialDesignHeadline3TextBlock}" FontSize="20" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="49" Width="600"/>
                    <TextBlock x:Name="NumAnswersLeftHeader" HorizontalAlignment="Stretch" Margin="524,30,104.8,0" TextWrapping="Wrap" Text="Answers Left:" VerticalAlignment="Stretch" Height="35" Width="96"/>
                    <TextBlock x:Name="AnswersLeft" HorizontalAlignment="Stretch" Margin="646,-35,5.8,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="35"/>
                    <TextBlock x:Name="NumCorrectAnswersHeader" HorizontalAlignment="Stretch" Margin="524,0,86.8,0" TextWrapping="Wrap" Text="Correct Answers:" VerticalAlignment="Stretch" Height="35" Width="114"/>
                    <TextBlock x:Name="CorrectAnswers" HorizontalAlignment="Stretch" Margin="646,-50,5.8,0" TextWrapping="Wrap"  VerticalAlignment="Stretch" Height="19"/>
                    <TextBlock x:Name="TimeLeftHeader" HorizontalAlignment="Stretch" Margin="525,0,85.8,0" TextWrapping="Wrap" Text="Time Left:" VerticalAlignment="Stretch" Height="36" Width="114"/>
                    <TextBlock x:Name="TimeLeft" HorizontalAlignment="Stretch" Margin="613,-45,20,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="23"/>
                    <Button x:Name="Answer1" Content="" HorizontalAlignment="Stretch" Margin="250,-200,244.8,0" VerticalAlignment="Stretch" Height="35" Click="Answer1_Click"/>
                    <Button x:Name="Answer2" Content="" HorizontalAlignment="Stretch" Margin="251,-100,244.8,0" VerticalAlignment="Stretch" Height="35" Click="Answer2_Click"/>
                    <Button x:Name="Answer3" Content="" HorizontalAlignment="Stretch" Margin="251,-20,244.8,0" VerticalAlignment="Stretch" Height="36" Click="Answer3_Click"/>
                    <Button x:Name="Answer4" Content="" HorizontalAlignment="Stretch" Margin="251,15,244.8,0" VerticalAlignment="Stretch" Height="35" Click="Answer4_Click"/>
                    <Button x:Name="BackButton" Content="Leave Game" HorizontalAlignment="Stretch" Margin="560,10,43.8,0" VerticalAlignment="Stretch" Height="41" Click="BackButton_Click"/>
                    <TextBlock x:Name="DifficultyHeader" HorizontalAlignment="Stretch" Margin="15,-400,612,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="28"><Run Text="Difficulty:"/></TextBlock>
                    <TextBlock x:Name="Difficulty" HorizontalAlignment="Stretch" Margin="115,-395,548.8,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="35" Width="77"><Run Text=""/></TextBlock>
                    <TextBlock x:Name="CategoryHeader" HorizontalAlignment="Stretch" Margin="15,-320,632,0" TextWrapping="Wrap" Text="Category:" VerticalAlignment="Stretch" Height="28"/>
                    <TextBlock x:Name="Category" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-420,-330,0,0" TextWrapping="Wrap" Height="34" Width="113"><Run Text=""/></TextBlock>
                    <TextBlock x:Name="ErrorOutput" HorizontalAlignment="Center" Margin="16,-30,246,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="76" Width="460"/>
                    <TextBlock Margin="15,-350,593,0" TextWrapping="Wrap" Width="114" Text="Selected Answer:" Height="32"/>
                    <TextBlock x:Name="SelectedAnswerOutput"  HorizontalAlignment="Stretch" Margin="15,-310,507,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="32"/>
                    <TextBlock Width="200" Margin="15,-230,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Stretch" Text="Time took for answer:" Height="39"/>
                    <TextBlock x:Name="TimeTookForAnswerOutput"  Margin="15,-200,570,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="22"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</local:CustomWindow>
