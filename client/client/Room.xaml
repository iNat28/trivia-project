<Window x:Class="client.Room"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Room Menu" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="NamesList" HorizontalAlignment="Left" Height="135" Margin="303,158,0,0" VerticalAlignment="Top" Width="159" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBlock x:Name="errorOutput" HorizontalAlignment="Left" Margin="25,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="310" Width="181"/>
        <TextBlock x:Name="RoomName" HorizontalAlignment="Left" Margin="364,27,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="29" Width="120"/>
        <TextBlock x:Name="NumQuestions" HorizontalAlignment="Left" Margin="402,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="27" Width="82"/>
        <TextBlock x:Name="MaxPlayers" HorizontalAlignment="Left" Margin="364,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="29" Width="82"/>
        <TextBlock x:Name="TimePerQuestion" HorizontalAlignment="Left" Margin="402,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="27" Width="82"/>
        <Button x:Name="StartGameButton" Content="Start Game" HorizontalAlignment="Left" Margin="233,311,0,0" VerticalAlignment="Top" Width="75" Click="StartGameButton_Click"/>
        <Button x:Name="CloseRoomButton" Content="Close Room" HorizontalAlignment="Left" Margin="233,353,0,0" VerticalAlignment="Top" Width="75" Click="CloseRoomButton_Click"/>
        <Button x:Name="LeaveRoomButton" Content="Leave Room" HorizontalAlignment="Left" Margin="492,305,0,0" VerticalAlignment="Top" Width="75" Click="LeaveGameButton_Click"/>
        <TextBlock x:Name="RoomNameHeader" HorizontalAlignment="Left" Margin="263,27,0,0" TextWrapping="Wrap" Text="Room Name:" VerticalAlignment="Top" Height="29" Width="70"/>
        <TextBlock x:Name="MaxPlayersHeader" HorizontalAlignment="Left" Margin="263,83,0,0" TextWrapping="Wrap" Text="Max PLayers:" VerticalAlignment="Top" Height="29" Width="71"/>
        <TextBlock x:Name="TimePerQuestionHeader" HorizontalAlignment="Left" Margin="263,117,0,0" TextWrapping="Wrap" Text="Time Per Question:" VerticalAlignment="Top" Height="27" Width="107"/>
        <TextBlock x:Name="NumQuestionsHeader" HorizontalAlignment="Left" Margin="263,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" Height="17"><Run Text="Number of Questions:"/></TextBlock>
        

    </Grid>
</Window>
