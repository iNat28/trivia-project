<Window x:Class="client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Button x:Name="signUpButton" Content="Sign Up" HorizontalAlignment="Left" Margin="349,211,0,0" VerticalAlignment="Top" Width="75" Click="signUpButton_Click"/>
        <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Left" Margin="349,261,0,0" VerticalAlignment="Top" Width="75" Click="exitButton_Click"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="349,165,0,0" VerticalAlignment="Top" Width="75" Click="loginButton_Click"/>
        <TextBox x:Name="usernameInput" HorizontalAlignment="Left" Margin="328,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordInput" HorizontalAlignment="Left" Margin="328,119,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="245,82,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" Width="67"/>
        <TextBlock HorizontalAlignment="Left" Margin="245,119,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Width="67"/>

    </Grid>
</Window>
