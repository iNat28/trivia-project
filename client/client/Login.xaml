<local:CustomWindow x:Class="client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        x:Name="LoginWindowWPF"
        WindowStartupLocation="CenterScreen"                
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="#FF410A66"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        MinHeight="450" MinWidth="400"
        MaxHeight="600" MaxWidth="1000"
        SizeChanged="WindowSizeChanged"
        Title="Login" Height="450" Width="800" >

    <Grid x:Name="Grid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border x:Name="Border" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="WhiteSmoke" Margin="10,10,10,0" CornerRadius="5" Height="400">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="25" Height="367">
                    <TextBlock Text="Login" Style="{StaticResource MaterialDesignHeadline2TextBlock}" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBox x:Name="usernameInput" materialDesign:HintAssist.Hint="Username" materialDesign:HintAssist.Foreground="BlueViolet" materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet" Style="{StaticResource MaterialDesignFloatingHintTextBox}" HorizontalAlignment="Stretch" Margin="0,20,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="151"/>
                    <PasswordBox x:Name="passwordInput" materialDesign:HintAssist.Hint="Password" materialDesign:HintAssist.Foreground="BlueViolet" materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Stretch" Width="151"/>
                    <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Stretch" Width="105" Click="LoginButton_Click" Height="37"/>
                    <Button x:Name="signUpButton" Content="Sign Up" HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Stretch" Width="105" Height="37" Click="SignUpButton_Click"/>
                    <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Stretch" Width="105" Click="ExitButton_Click"/>
                    <TextBlock x:Name="ErrorOutput" HorizontalAlignment="Stretch" Margin="490,-180,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="221" Height="200"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</local:CustomWindow>
